<%= form_tag '/login', method: :post do %>
    <label>Email: </label><%= text_field_tag :email, nil, :placeholder => "Enter email address"  %> <br><br>
    <label>Password: </label><%= password_field_tag :password, nil, :placeholder => "Enter password" %><br><br>
    <%= submit_tag "Login", id: 'login-btn'%>
<% end %>

<p>Not a user yet? Sign up <%= link_to 'here', new_user_path %></p>
